{
	"compilerOptions": {
		"sourceMap": true,
		"strict": true,
		"declaration": true,
		"declarationDir": "./types",
		"emitDeclarationOnly": true,
		"sourceRoot": "./src/index.ts",
		"baseUrl": ".",
		"rootDir": ".",
		"target": "es6",
		"module": "es6",
		"moduleResolution": "node",
		"removeComments": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"]
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "shims-vue.d.ts"]
}
