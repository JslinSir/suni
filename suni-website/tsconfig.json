{
	"compilerOptions": {
		"outDir": "./dist",
		"allowJs": true,
		"target": "es6",
		"module": "es2020",
		"moduleResolution": "node",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"types": ["node"],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
